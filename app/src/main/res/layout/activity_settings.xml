<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/settings_layout"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    tools:context=".settings.SettingsActivity"
    >

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_beep"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/pref_beep"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:background="@drawable/button"
        android:textColor="@color/colorWhite"

        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_vibrate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/pref_vibrate"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/switch_beep"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:background="@drawable/button"
        android:textColor="@color/colorWhite"
        />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_add_to_history"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/pref_add_to_history"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/switch_vibrate"
        android:layout_alignParentStart="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:background="@drawable/button"
        android:textColor="@color/colorWhite"
        />

